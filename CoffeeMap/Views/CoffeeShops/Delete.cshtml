@model CoffeeMap.Models.CoffeeShop
@{
    ViewData["Title"] = Model.Name;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="m-0">@Model.Name</h1>
    <div class="btn-group">
        <a class="btn btn-secondary" asp-action="Index">Назад до списку</a>
        <a class="btn btn-primary" asp-controller="Products" asp-action="Create">Добавити товар</a>
        <a class="btn btn-outline-primary" asp-controller="Reviews" asp-action="Create" asp-route-coffeeShopId="@Model.Id">Добавити відгук</a>
        <a class="btn btn-outline-secondary" asp-action="Edit" asp-route-id="@Model.Id">Редагувати кав'ярню'</a>
    </div>
</div>

<div class="row g-3">
    <div class="col-12 col-lg-6">
        <div class="card h-100">
            @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" class="card-img-top" style="object-fit:cover;height:300px" alt="@Model.Name" />
            }
            <div class="card-body">
                <h5>Информация</h5>
                <p class="mb-1"><strong>Адрес:</strong> @Model.Address</p>
                @if (Model.Lat.HasValue && Model.Lng.HasValue)
                {
                    <p class="mb-1"><strong>Координати:</strong> @Model.Lat, @Model.Lng</p>
                }
                @if (!string.IsNullOrWhiteSpace(Model.OpeningHours))
                {
                    <p class="mb-1"><strong>Графік:</strong> @Model.OpeningHours</p>
                }
                @if (!string.IsNullOrWhiteSpace(Model.Phone))
                {
                    <p class="mb-1"><strong>Телефон:</strong> @Model.Phone</p>
                }
            </div>
        </div>
    </div>

    <div class="col-12 col-lg-6">
        <div class="card h-100">
            <div class="card-body">
                <h5>Відгуки (@Model.Reviews.Count)</h5>
                @if (!Model.Reviews.Any())
                {
                    <div class="text-muted">Поки нема відгуків.</div>
                }
                else
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var r in Model.Reviews.OrderByDescending(x => x.CreatedAt).Take(5))
                        {
                            <li class="list-group-item">
                                <strong>Оценка:</strong> @r.Rating/5
                                @if (!string.IsNullOrWhiteSpace(r.Comment))
                                {
                                    <div>@r.Comment</div>
                                }
                                <div class="small text-muted">@r.CreatedAt.ToLocalTime()</div>
                            </li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>
</div>

<hr class="my-4" />

<h3>Меню / Товари (@Model.Products.Count)</h3>

@if (!Model.Products.Any())
{
    <div class="alert alert-info">Нема товарів. Натисніть “Додати товар”.</div>
}
else
{
    <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-3">
        @foreach (var p in Model.Products.OrderBy(x => x.Title))
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrWhiteSpace(p.ImageUrl))
                    {
                        <img src="@p.ImageUrl" class="card-img-top" style="object-fit:cover;height:180px" alt="image" />
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@p.Title</h5>
                        @if (!string.IsNullOrWhiteSpace(p.Category))
                        {
                            <span class="badge bg-secondary mb-2">@p.Category</span>
                        }
                        <p class="mb-2">@p.Description</p>
                        <div class="mt-auto">
                            <div class="fw-bold mb-2">@p.Price.ToString("0.00")</div>
                            <div class="d-flex gap-2">
                                <a class="btn btn-sm btn-outline-primary" asp-controller="Products" asp-action="Details" asp-route-id="@p.Id">Подробнее</a>
                                <a class="btn btn-sm btn-outline-secondary" asp-controller="Products" asp-action="Edit" asp-route-id="@p.Id">Редактировать</a>
                                <a class="btn btn-sm btn-outline-danger" asp-controller="Products" asp-action="Delete" asp-route-id="@p.Id">Удалить</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
