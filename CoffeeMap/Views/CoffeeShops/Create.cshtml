@model CoffeeMap.ViewModels.CoffeeShopCreateEditVM
@{
    ViewData["Title"] = "Добавити кав'ярню";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Address" class="form-label"></label>
        <input asp-for="Address" class="form-control" />
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Lat" class="form-label"></label>
            <input asp-for="Lat" class="form-control" type="number" step="any" />
            <span asp-validation-for="Lat" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Lng" class="form-label"></label>
            <input asp-for="Lng" class="form-control" type="number" step="any" />
            <span asp-validation-for="Lng" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="OpeningHours" class="form-label"></label>
        <input asp-for="OpeningHours" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Phone" class="form-label"></label>
        <input asp-for="Phone" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Фото (JPG/PNG/WebP)</label>
        <input asp-for="ImageFile" type="file" class="form-control" accept=".jpg,.jpeg,.png,.webp" />
        <input type="hidden" asp-for="ImageUrl" />
    </div>

    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <div class="mb-3">
            <img src="@Model.ImageUrl" alt="Preview" style="max-height:200px;" />
        </div>
    }

    <button type="submit" class="btn btn-primary">Зберегти</button>
    <a asp-action="Index" class="btn btn-secondary">Відміна</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
